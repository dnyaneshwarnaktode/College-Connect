# Production Environment Configuration for MongoDB Atlas
# Copy this to .env.production for production deployment

# Database - MongoDB Atlas Production
MONGODB_URI=mongodb+srv://collegeconnect_user:<PRODUCTION_PASSWORD>@collegeconnect-cluster.xxxxx.mongodb.net/collegeconnect?retryWrites=true&w=majority

# JWT - Use a strong, unique secret for production
JWT_SECRET=your_super_secure_production_jwt_secret_here_make_it_very_long_and_random_at_least_32_characters

# Server Configuration
PORT=5000
NODE_ENV=production

# Client URL (for CORS) - Update with your production domain
CLIENT_URL=https://your-collegeconnect-app.vercel.app

# Security Headers
HELMET_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES=5

# Logging
LOG_LEVEL=error
MORGAN_FORMAT=combined

# SSL/TLS
SSL_ENABLED=true
FORCE_HTTPS=true
